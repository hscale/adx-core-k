{
  "name": "kiro-github-task-sync",
  "version": "1.0.0",
  "description": "Simple one-way sync from Kiro tasks to GitHub issues",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "test:performance": "RUN_PERFORMANCE_TESTS=1 cargo test --manifest-path tests/Cargo.toml performance_tests",
    "test:security": "RUN_SECURITY_TESTS=1 cargo test --manifest-path tests/Cargo.toml security_tests",
    "test:all": "cargo run --manifest-path tests/Cargo.toml --bin test_runner",
    "test:workflow": "cd adx-core && cargo test --workspace --test workflow_tests",
    "test:cross-service": "cargo test --manifest-path tests/Cargo.toml cross_service_tests",
    "test:desktop:integration": "playwright test tests/desktop/",
    "test:desktop:e2e": "playwright test tests/desktop/ --config=playwright.config.desktop.ts",
    "test:mobile:ios": "playwright test tests/mobile/ios-integration.test.ts",
    "test:mobile:android": "playwright test tests/mobile/android-integration.test.ts",
    "test:cross-platform:compatibility": "playwright test tests/cross-platform/compatibility.test.ts",
    "test:cross-platform": "./scripts/test-cross-platform.sh",
    "test:performance:cross-platform": "playwright test tests/performance/ --config=playwright.config.performance.ts",
    "test:e2e:microfrontends": "playwright test tests/e2e/specs/cross-microfrontend.spec.ts",
    "generate:compatibility-report": "node scripts/generate-compatibility-report.js",
    "generate:mobile-compatibility-report": "node scripts/generate-mobile-compatibility-report.js",
    "build:desktop": "npm run build:all && cargo tauri build",
    "build:mobile:ios": "npm run build:all && cargo tauri ios build",
    "build:mobile:android": "npm run build:all && cargo tauri android build",
    "dev:all": "concurrently \"npm run dev:shell\" \"npm run dev:auth\" \"npm run dev:tenant\" \"npm run dev:file\" \"npm run dev:user\" \"npm run dev:workflow\"",
    "dev:shell": "cd apps/shell && npm run dev",
    "dev:auth": "cd apps/auth && npm run dev",
    "dev:tenant": "cd apps/tenant && npm run dev",
    "dev:file": "cd apps/file && npm run dev",
    "dev:user": "cd apps/user && npm run dev",
    "dev:workflow": "cd apps/workflow && npm run dev",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "setup-github": "tsx setup-github-sync.ts",
    "sync-tasks": "tsx sync-adx-core-tasks.ts",
    "sync-tasks-dry-run": "tsx sync-adx-core-tasks.ts --dry-run",
    "sync-task-completion": "tsx sync-task-1-completion.ts",
    "hook-github-sync": "tsx kiro-hook-github-sync.ts",
    "hook-github-sync-auto": "tsx kiro-hook-github-sync.ts --auto",
    "hook-github-sync-dry-run": "tsx kiro-hook-github-sync.ts --dry-run"
  },
  "keywords": [
    "kiro",
    "github",
    "task-sync",
    "typescript"
  ],
  "author": "Kiro Team",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "gray-matter": "^4.0.3",
    "marked": "^9.1.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}