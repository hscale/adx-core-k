{
  "name": "adx-core-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "bff-services/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "sh scripts/dev-start-all.sh",
    "test": "sh scripts/test-all.sh",
    "build": "yarn workspaces run build",
    "lint": "yarn workspaces run lint",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules bff-services/*/node_modules tools/*/node_modules"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0"
  }
}
