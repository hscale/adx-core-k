{
  "name": "@adx-core/file-bff",
  "version": "1.0.0",
  "description": "File BFF service for ADX Core - Temporal workflow client with caching",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
