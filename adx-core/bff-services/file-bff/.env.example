# File BFF Service Configuration

# Server Configuration
PORT=4003
HOST=0.0.0.0

# API Gateway and Services
API_GATEWAY_URL=http://localhost:8080
FILE_SERVICE_URL=http://localhost:8083

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Temporal Configuration
TEMPORAL_SERVER_URL=localhost:7233
TEMPORAL_NAMESPACE=default

# JWT Configuration
JWT_SECRET=your-secret-key

# Logging Configuration
RUST_LOG=file_bff=debug,tower_http=debug

# Cache Configuration
DEFAULT_CACHE_TTL=300
FILE_METADATA_CACHE_TTL=600
PERMISSIONS_CACHE_TTL=300
SEARCH_CACHE_TTL=300
UPLOAD_PROGRESS_CACHE_TTL=30
WORKFLOW_STATUS_CACHE_TTL=300

# File Upload Configuration
MAX_FILE_SIZE=5368709120  # 5GB in bytes
ALLOWED_FILE_TYPES=*
VIRUS_SCAN_ENABLED=true

# Storage Configuration
DEFAULT_STORAGE_PROVIDER=s3
THUMBNAIL_GENERATION_ENABLED=true
PREVIEW_GENERATION_ENABLED=true

# Performance Configuration
REQUEST_TIMEOUT=30
CONNECTION_POOL_SIZE=10
MAX_CONCURRENT_REQUESTS=100