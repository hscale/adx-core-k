# Workflow BFF Service Configuration

# Server Configuration
PORT=4005
HOST=0.0.0.0

# API Gateway Configuration
API_GATEWAY_URL=http://localhost:8080
API_TIMEOUT_SECONDS=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=workflow_bff
REDIS_DEFAULT_TTL=300

# Temporal Configuration
TEMPORAL_SERVER_URL=http://localhost:7233
TEMPORAL_NAMESPACE=default

# Logging Configuration
RUST_LOG=workflow_bff=debug,tower_http=debug

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004,http://localhost:3005

# Cache Configuration
CACHE_TTL_WORKFLOW_STATUS=60
CACHE_TTL_WORKFLOW_LIST=300
CACHE_TTL_WORKFLOW_HISTORY=600
CACHE_TTL_WORKFLOW_TEMPLATES=3600
CACHE_TTL_WORKFLOW_SCHEDULES=600
CACHE_TTL_WORKFLOW_METRICS=300
CACHE_TTL_SYSTEM_HEALTH=60
CACHE_TTL_WORKFLOW_DASHBOARD=300
CACHE_TTL_WORKFLOW_ANALYTICS=600

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
KEEPALIVE_TIMEOUT_SECONDS=60

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30